@model List<ShopTrangSucOnline.Model.Entities.Account>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<h1>Quản lý Account</h1>
<a href="/Admin/Account/Create" class="btn btn-primary mb-3">Thêm mới</a>
<div class="card">
    <div class="card-body">
        <h6 class="card-title">Danh sách Account</h6>
        <div class="table-responsive">
            <table class="table table-hover table-bordered">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Tên tài khoản</th>
                        <th>Mật khẩu</th>
                        <th>Quyền hạn</th>
                        <th>Chức năng</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>                           
                            <td>@item.Id</td>
                            <td>@item.Username</td>
                            <td>@item.Password</td>
                            <td>@item.Permission</td>
                            <td>
                                <a class="btn btn-primary" href="/Admin/Account/Edit/@item.Id">Sửa</a>
                                <a class="btn btn-danger" href="/Admin/Account/Delete/@item.Id">Xóa</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

