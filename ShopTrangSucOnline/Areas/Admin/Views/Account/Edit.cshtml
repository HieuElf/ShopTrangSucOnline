@model ShopTrangSucOnline.Model.Entities.Account
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-body">
        <h6 class="card-title">Chỉnh sửa</h6>
        <form class="forms-sample" action="/Admin/Account/Edit" method="post">
            <div class="form-group row">
                <label class="col-sm-3 col-form-label" asp-for="Id"></label>
                <div class="col-sm-9">
                    <input class="form-control" asp-for="Id" value="@Model.Id">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-3 col-form-label" asp-for="Username"></label>
                <div class="col-sm-9">
                    <input class="form-control" asp-for="Username" value="@Model.Username">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-3 col-form-label" asp-for="Password"></label>
                <div class="col-sm-9">
                    <input class="form-control" asp-for="Password" value="@Model.Password">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-3 col-form-label" asp-for="Permission"></label>
                <div class="col-sm-9">
                    <input class="form-control" asp-for="Permission" value="@Model.Permission">
                </div>
            </div>
            <button type="submit" class="btn btn-primary mr-2">Update</button>
            <a class="btn btn-light" href="/Admin/Account/Index">Huỷ</a>
        </form>
    </div>
</div>

