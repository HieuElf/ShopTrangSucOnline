@model ShopTrangSucOnline.Model.Entities.OrderDetail
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-body">
        <h6 class="card-title">Chỉnh sửa</h6>
        <form class="forms-sample" action="/Admin/OrderDetail/Edit" method="post">
            <div class="form-group row">
                <label class="col-sm-3 col-form-label" asp-for="OrderId"></label>
                <div class="col-sm-9">
                    <input class="form-control" asp-for="OrderId" value="@Model.OrderId">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-3 col-form-label" asp-for="ProductId"></label>
                <div class="col-sm-9">
                    <input class="form-control" asp-for="ProductId" value="@Model.ProductId">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-3 col-form-label" asp-for="Quantity"></label>
                <div class="col-sm-9">
                    <input class="form-control" asp-for="Quantity" value="@Model.Quantity">
                </div>
            </div>
            <button type="submit" class="btn btn-primary mr-2">Update</button>
            <a class="btn btn-light" href="/Admin/Account/Index">Huỷ</a>
        </form>
    </div>
</div>

