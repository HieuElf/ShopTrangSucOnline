@model ShopTrangSucOnline.Model.Entities.OrderDetail
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-body">
        <h6 class="card-title">Thêm mới</h6>
        <form class="forms-sample" action="/Admin/OrderDetail/Create" method="post">
            <div class="form-group row">
                <label class="col-sm-3 col-form-label" asp-for="OrderId"></label>
                <div class="col-sm-9">
                    <input class="form-control" asp-for="OrderId">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-3 col-form-label" asp-for="ProductId"></label>
                <div class="col-sm-9">
                    <input class="form-control" asp-for="ProductId">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-3 col-form-label" asp-for="Quantity"></label>
                <div class="col-sm-9">
                    <input class="form-control" asp-for="Quantity">
                </div>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success">Submit</button>
            </div>
        </form>
    </div>
</div>
