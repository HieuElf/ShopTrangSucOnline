@model List<ShopTrangSucOnline.Model.Entities.OrderDetail>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<h1>Quản lý OrderDetail</h1>
<a href="/Admin/OrderDetail/Create" class="btn btn-primary mb-3">Thêm mới</a>
<div class="card">
    <div class="card-body">
        <h6 class="card-title">Danh sách OrderDetail</h6>
        <div class="table-responsive">
            <table class="table table-hover table-bordered">
                <thead>
                    <tr>
                        <th>OrderID</th>
                        <th>Mã sản phẩm</th>
                        <th>Số lượng</th>
                        <th>Chức năng</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.OrderId</td>
                            <td>@item.ProductId</td>
                            <td>@item.Quantity</td>
                            <td>
                                <a class="btn btn-primary" href="/Admin/OrderDetail/Edit/@item.OrderId">Sửa</a>
                                <a class="btn btn-danger" href="/Admin/OrderDetail/Delete/@item.OrderId">Xóa</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

