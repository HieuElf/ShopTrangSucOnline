@model Tuple<List<ShopTrangSucOnline.Model.Entities.ProductCategory>, List<ShopTrangSucOnline.Model.Entities.Product>,List<ShopTrangSucOnline.Model.Entities.Product>>
@{
    ViewData["Title"] = "Index";
}

<section>
    <div class="container">
        <div class="row">
            <div class="col-sm-3">
                <div class="left-sidebar">
                    <h2>Danh mục sản phẩm</h2>
                    <div class="panel-group category-products" id="accordian">
                        <!--category-productsr-->
                        @foreach (var item in Model.Item1)
                        {
                            <div class="panel panel-default">
                                <div class="">
                                    <h4 class="text-dark">@item.Name</h4>
                                </div>
                            </div>
                        }
                    </div><!--/category-products-->
                    <div class="price-range">
                        <!--price-range-->
                        <h2>Khoảng giá</h2>
                        <div class="well text-center">
                            <input type="text" class="span2" value="" data-slider-min="0" data-slider-max="100000000" data-slider-step="100000" data-slider-value="[250,450]" id="sl2"><br />
                            <b class="pull-left">0 Đ</b> <b class="pull-right">100000000 Đ</b>
                        </div>
                    </div><!--/price-range-->

                    <div class="shipping text-center">
                        <!--shipping-->
                        <img src="/assets/images/home/shipping.jpg" alt="" />
                    </div><!--/shipping-->

                </div>
            </div>

            <div class="col-sm-9 padding-right">
                <div class="category-tab">
                    <!--category-tab-->
                    <div class="col-sm-12">
                        <ul class="nav nav-tabs">
                            @foreach (var item in Model.Item1)
                            {
                                <li><a href="#@item.Id" data-toggle="tab">@item.Name</a></li>
                            }
                        </ul>
                    </div>
                    <div class="tab-content">
                        @foreach (var item in Model.Item1)
                        {
                            <div class="tab-pane fade" id="@item.Id">
                                @foreach (var product in Model.Item2)
                                {
                                    @if (product.CategoryId == item.Id)
                                    {
                                        <div class="col-sm-3">
                                            <div class="product-image-wrapper">
                                                <div class="single-products">
                                                    <div class="productinfo text-center">
                                                        <img src="/assets/images/product/@product.Image" alt="" />
                                                        <h2>@product.Promotion Đ</h2>
                                                        <div>
                                                            <a class="text-dark" href="/Product/Details/@product.Id">@product.Name</a>
                                                        </div>
                                                        <button onclick="AddToCart('@product.Id')" type="button" class="btn btn-fefault cart">
                                                            <i class="fa fa-shopping-cart"></i>
                                                            Thêm vào giỏ hàng
                                                        </button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                }
                            </div>
                        }
                    </div>
                </div><!--/category-tab-->
                <div class="features_items">
                    <!--features_items-->
                    <h2 class="title text-center">Sản phẩm bán chạy</h2>
                    @foreach (var item in Model.Item3)
                    {
                        <div class="col-sm-4">
                            <div class="product-image-wrapper">
                                <div class="single-products">
                                    <div class="productinfo text-center">
                                        <img src="/assets/images/product/@item.Image" alt="" />
                                        <h2>@item.Promotion Đ</h2>
                                        <div>
                                            <a class="text-dark" href="/Product/Details/@item.Id">@item.Name</a>
                                        </div>
                                        <button onclick="AddToCart('@item.Id')" type="button" class="btn btn-fefault cart">
                                            <i class="fa fa-shopping-cart"></i>
                                            Thêm vào giỏ hàng
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                </div><!--features_items-->
            </div>
        </div>
    </div>
</section>

